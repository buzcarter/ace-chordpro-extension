{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "src/scripts/js",
    "sourceMap": true,
    "strict": true,
    "target": "ES6"
  },
  "include": [
    "src/scripts/js/**/*.ts",
    "src/scripts/js/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "vendor",
  ]
}
